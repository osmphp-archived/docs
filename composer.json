{
    "name": "osmphp/docs",
    "description": "Modules showing Markdown files as Web pages. Essential part of self-hosted version of osmdocs.com.",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Osm\\Docs\\": "src/",
            "Osm\\Docs\\Tests\\": "tests/",
            "Osm\\Docs\\Samples\\": "samples/"
        }
    },
    "require": {
        "php": "^7.2",
        "osmphp/framework": "dev-master",
        "michelf/php-markdown": "1.8.*"
    },
    "extra": {
        "osm": {
            "component_pools": {
                "src": {
                    "module_path": "*/Module.php",
                    "theme_path": "*/theme.php"
                },
                "samples": {
                    "module_path": "*/Module.php",
                    "testing": true
                }
            }
        }
    }
}
